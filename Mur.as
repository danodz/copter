package  {		import flash.display.MovieClip;	import flash.events.Event;		public class Mur extends MovieClip 	{		public var retirer : Boolean = false;				public static var couleur : int = 1;				public function Mur(x : int, y : int, height : int)		{			this.x = x;			this.y = y;			this.height = height;						gotoAndStop(couleur);		}				public function update()		{			gotoAndStop(couleur);			x -= 10;						if(y > 400)				y = 400;							if(x < -50)			{				retirer = true;			}						if(couleur > 7)				couleur = 1;		}	}	}